function is kelipatan2(angka: integer):boolean;
begin
        if angka mod 2=0 then
                angka:=true;
                writeln('tendangan terlalu ke kiri atau ke kanan')
        else
                angka:=false;
end;
function is kelipatan5(angka:integer):boolean;
begin
        if angka mod 5=0 then;
                angka:=true;
                writeln('tendangan terlalu ke atas')
        else
                angka:=false;
end;
function is ganjil(angka:integer):boolean;
begin
        if angka mod 5<>0 then
                angka:=true;
                writeln('tendangan tepat sasaran')
        else
                angka:=false;
end;
